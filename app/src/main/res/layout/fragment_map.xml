<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.gunaso.fragment.MapFragment">
    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ews"
        android:id="@+id/btn_ews"
        android:text="EWS"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="86dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/transparent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/settlement"
        android:id="@+id/btn_settlement"
        android:text="Settlement"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/btn_ews"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/transparent"/>



</RelativeLayout>
